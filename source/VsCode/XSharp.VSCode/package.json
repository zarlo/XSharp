{
    "name": "xsharp",
    "displayName": "X#",
    "description": "X# language support for Visual Studio Code",
    "version": "0.0.1",
    "publisher": "Cosmos",
    "repository": {
        "type": "git",
        "url": "https://github.com/CosmosOS/XSharp.git"
    },
    "license": "BSD-3-Clause",
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:xsharp"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "title": "X#",
            "properties": {
                "xsharp.compileOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Compile X# files when they're saved."
                },
                "xsharp.compileOutputPath": {
                    "type": "string",
                    "default": "",
                    "description": "Output path for *.asm files generated by the X# compiler. To compile X# files you can use the 'Compile X# file' command or set 'compileOnSave' to true."
                },
                "xsharp.compilerPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to the xsc.exe used for compilation."
                },
                "xsharp.nasmPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to nasm used for compiling to bin."
                }
            }
        },
        "commands": [
            {
                "command": "xsharp.compileFile",
                "title": "X#: Compile X# File"
            },
            {
                "command": "xsharp.compileAllFiles",
                "title": "X#: Compile All X# Files"
            },
            {
                "command": "xsharp.createBin",
                "title": "X#: Converts all compiled asm files into a bin"
            }
        ],
        "grammars": [
            {
                "language": "xsharp",
                "scopeName": "source.xsharp",
                "path": "xsharp/xsharp.tmLanguage.json"
            }
        ],
        "languages": [
            {
                "id": "xsharp",
                "aliases": [
                    "X#"
                ],
                "extensions": [
                    ".xs"
                ],
                "configuration": "xsharp/language-configuration.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.41",
        "@types/node": "^6.0.40",
        "mocha": "^10.2.0",
        "typescript": "^2.4.2",
        "vscode": "^1.1.37"
    },
    "dependencies": {
        "vscode-debugadapter": "^1.41.1",
        "vscode-debugprotocol": "^1.41.0"
    }
}
